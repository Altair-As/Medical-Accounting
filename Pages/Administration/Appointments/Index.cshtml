@page
@model WebApplicationAuth.Pages.Administration.Appointments.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Administration/Shared/_Layout.cshtml";
}

<div class="container">


    <div class="row text-center">

        <h1 class="display-4">Appointments list</h1>

    </div>

    <div class="row justify-content-center mb-4 mt-2">

        <div class="col-auto align-self-center">

            <a asp-page="Create" class="btn btn-primary pt-2 border border-1 border-dark addbtn">Add new appointment</a>

        </div>

    </div>

</div>

<table class="table table-striped table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>
                Date
            </th>
            <th>
                Time
            </th>
            <th>
                Tipe
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Complaints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Symptoms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Diagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Employer)
            </th>
            <th style="min-width:180px">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Record) {
        <tr>
            <td style="min-width:100px">
                @item.AppointmentDate.ToString("dd.MM.yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complaints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symptoms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employer.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
