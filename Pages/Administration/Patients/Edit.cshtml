@page
@model WebApplicationAuth.Pages.Administration.Patients.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Administration/Shared/_Layout.cshtml";
}

<div class="text-center">

    <h1>Edit</h1>

    <h4>MedicalCard</h4>
    <hr />

    <div class="card fixedsize">

        <div class="card-body">

            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="MedicalCard.Id" />

                <div class="form-group mb-2">

                    <label asp-for="MedicalCard.FIO" class="control-label"></label>
                    <input asp-for="MedicalCard.FIO" class="form-control" />
                    <span asp-validation-for="MedicalCard.FIO" class="text-danger"></span>

                </div>

                <div class="form-group mb-2">

                    <label asp-for="MedicalCard.Insurance" class="control-label"></label>
                    <input asp-for="MedicalCard.Insurance" class="form-control" />
                    <span asp-validation-for="MedicalCard.Insurance" class="text-danger"></span>

                </div>

                <div class="form-group mb-2">

                    <label asp-for="MedicalCard.SNILS" class="control-label"></label>
                    <input asp-for="MedicalCard.SNILS" class="form-control" />
                    <span asp-validation-for="MedicalCard.SNILS" class="text-danger"></span>

                </div>

                <div class="form-group mb-2">

                    <label asp-for="MedicalCard.Passport" class="control-label"></label>
                    <input asp-for="MedicalCard.Passport" class="form-control" />
                    <span asp-validation-for="MedicalCard.Passport" class="text-danger"></span>

                </div>

                <div class="form-group mb-2">

                    <label asp-for="MedicalCard.DateOfBirth" class="control-label"></label>
                    <input asp-for="MedicalCard.DateOfBirth" class="form-control" />
                    <span asp-validation-for="MedicalCard.DateOfBirth" class="text-danger"></span>

                </div>

                <div class="form-group mb-2">

                    <label asp-for="MedicalCard.Address" class="control-label"></label>
                    <input asp-for="MedicalCard.Address" class="form-control" />
                    <span asp-validation-for="MedicalCard.Address" class="text-danger"></span>

                </div>

                <div class="form-group mb-2">

                    <label asp-for="MedicalCard.Weight" class="control-label"></label>
                    <input asp-for="MedicalCard.Weight" class="form-control" />
                    <span asp-validation-for="MedicalCard.Weight" class="text-danger"></span>

                </div>

                <div class="form-group mb-2">

                    <label asp-for="MedicalCard.Height" class="control-label"></label>
                    <input asp-for="MedicalCard.Height" class="form-control" />
                    <span asp-validation-for="MedicalCard.Height" class="text-danger"></span>

                </div>

                <div class="form-group mb-2">

                    <label asp-for="MedicalCard.ImagePath" class="control-label"></label>
                    <input asp-for="MedicalCard.ImagePath" class="form-control" />
                    <span asp-validation-for="MedicalCard.ImagePath" class="text-danger"></span>

                </div>

                <div class="form-group mt-3">

                    <input type="submit" value="Save changes" class="btn btn-primary" />

                </div>

            </form>

        </div>

    </div>

    <div class="mt-3">

        <a class="btn btn-primary" asp-page="./Index">Back to List</a>

    </div>

</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
