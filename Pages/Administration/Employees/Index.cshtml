@page
@model WebApplicationAuth.Pages.Administration.Employees.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Administration/Shared/_Layout.cshtml";
}

<div class="container">


    <div class="row text-center">

        <h1 class="display-4">Employees list</h1>

    </div>

    <div class="row justify-content-center mb-4 mt-2">

        <div class="col-auto align-self-center">

            <a asp-page="Create" class="btn btn-primary pt-2 border border-1 border-dark addbtn">Add new employer</a>

        </div>

        <div class="col-auto align-self-center">

            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary pt-2 border border-1 border-dark addbtn">Registrate new user</a>

        </div>

    </div>

</div>

<table class="table table-striped table-bordered text-center" style="vertical-align:middle">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employer[0].FIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employer[0].Speciality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employer[0].Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employer[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employer[0].Email)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speciality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
