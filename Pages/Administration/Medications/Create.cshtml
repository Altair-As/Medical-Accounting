@page
@model WebApplicationAuth.Pages.Medications.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Administration/Shared/_Layout.cshtml";
}

<div class="text-center">

    <h1>Create</h1>

    <h4>Medicine</h4>

    <hr />

    <div class="fixedsize">

        <div>

            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-2">
                    <label asp-for="Medicine.Name" class="control-label"></label>
                    <input asp-for="Medicine.Name" class="form-control" />
                    <span asp-validation-for="Medicine.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Medicine.Type" class="control-label"></label>
                    <input asp-for="Medicine.Type" class="form-control" />
                    <span asp-validation-for="Medicine.Type" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <a class="btn btn-primary" asp-page="Index">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-primary" />

                </div>

            </form>

        </div>

    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
