@page
@model WebApplicationAuth.Pages.Medications.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Administration/Shared/_Layout.cshtml";
}


<div class="container">


    <div class="row text-center">

        <h1 class="display-4">Medicine list</h1>

    </div>

    <div class="row justify-content-center mb-4 mt-2">

        <div class="col-auto align-self-center">

            <a asp-page="Create" class="btn btn-primary pt-2 border border-1 border-dark addbtn">Add new medicine</a>

        </div>

    </div>

</div>


<table class="table table-striped table-bordered text-center" style="vertical-align:middle">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Type)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Medicine) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
